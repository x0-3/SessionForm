{% extends 'base.html.twig' %}

{% block title %}Hello StagiaireController!{% endblock %}

{% block body %}

<section>

    <h1 class="text-center text-2xl font-semibold my-9">{{category.name}}</h1>
    
    <div class="flex my-9 ml-9" id="add_button">
        <a class="p-2 rounded-md" href="{{path('edit_category', {'id': category.id})}}">edit category</a>
        <a class="p-2 rounded-md ml-6" href="{{path('delete_category', {'id': category.id})}}">delete category</a>
        <a class="p-2 rounded-md ml-6" href="{{path('add_module')}}">add modules</a>
    </div>
    
    <div class="flex flex-wrap justify-evenly">

        {% for module in category.modules %}
        
        <div id="session" class="flex justify-center items-center flex-col rounded-md h-36 w-72  mr-14 mb-14">

            <h2 class="text-center text-xl">{{module}}</h2>

            <div class="flex flex-col items-center justify-end" id="add_button">
                <a class="p-1 w-20 rounded-md text-center mb-2.5" href="{{path('edit_module', {'id': module.id})}}">edit</a>
                <a class="p-1 w-20 rounded-md text-center mb-2.5" href="{{path('delete_module', {'id': module.id})}}">delete</a>

            </div>
        </div>
        
        {% endfor %}
    </div>
    
</section>

{% endblock %}
